<Window x:Class="Rasterizr.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rasterizr" Width="800" Height="600" 
		Loaded="Page_Loaded">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="20" />
			<RowDefinition Height="550" />
		</Grid.RowDefinitions>
		<Menu Grid.Row="0">
			<MenuItem Header="File">
				<MenuItem Name="mniOpen" Header="Open..." Click="mniOpen_Click" />
				<MenuItem Name="mniExit" Header="Exit" Click="mniExit_Click" />
			</MenuItem>
		</Menu>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="600" />
				<ColumnDefinition Width="200" />
			</Grid.ColumnDefinitions>
			<Image Grid.Column="0" Name="ImageViewport" Width="600" Height="550" />
			<ListBox x:Name="lsbMeshes" Grid.Column="1" DisplayMemberPath="Name" SelectionMode="Multiple" SelectionChanged="lsbMeshes_SelectionChanged" />
		</Grid>
	</Grid>
</Window>
