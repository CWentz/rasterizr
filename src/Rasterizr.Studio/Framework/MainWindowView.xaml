<Window x:Class="Rasterizr.Studio.Framework.MainWindowView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
		xmlns:f="clr-namespace:Rasterizr.Studio.Framework" 
		xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
        Title="Rasterizr Studio" Width="800" Height="600">
	<DockPanel LastChildFill="True">
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Preset Scene">
					<MenuItem Header="Simple Triangle" Command="{Binding OpenPresetSceneCommand}" 
							  CommandParameter="Rasterizr.Studio.Documents.PresetSceneDocument.Scenes.SimpleTriangleScene" />
					<MenuItem Header="Textured Quad" Command="{Binding OpenPresetSceneCommand}" 
							  CommandParameter="Rasterizr.Studio.Documents.PresetSceneDocument.Scenes.TexturedQuadScene" />
				</MenuItem>
				<MenuItem Header="Open" Command="{Binding OpenCommand}" />
				<MenuItem Header="Exit" Command="{Binding ExitCommand}" />
			</MenuItem>
		</Menu>
		<StatusBar DockPanel.Dock="Bottom">
			<StatusBarItem Content="{Binding StatusText}" />
		</StatusBar>
		<f:AvalonDockHost x:Name="avalonDockHost" Panes="{Binding Panes}" Documents="{Binding Documents}"
						  ActiveDocument="{Binding ActiveDocument}" ActivePane="{Binding ActivePane}">
			<f:AvalonDockHost.DefaultLayout>
				<ad:DocumentPane />
			</f:AvalonDockHost.DefaultLayout>
		</f:AvalonDockHost>
	</DockPanel>
</Window>